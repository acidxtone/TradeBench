{
  "name": "Question",
  "type": "object",
  "properties": {
    "year": {
      "type": "number",
      "enum": [
        1,
        2,
        3,
        4
      ],
      "description": "Apprenticeship year (1-4)"
    },
    "section": {
      "type": "number",
      "description": "Section number (1-5)"
    },
    "section_name": {
      "type": "string",
      "enum": [
        "Workplace Safety and Rigging",
        "Tools, Equipment and Materials",
        "Metal Fabrication",
        "Drawings and Specifications",
        "Calculations and Science"
      ]
    },
    "subtopic_code": {
      "type": "string",
      "description": "Subtopic code (A, B, C, etc.) from curriculum"
    },
    "subtopic_name": {
      "type": "string",
      "description": "Name of the specific curriculum subtopic"
    },
    "difficulty": {
      "type": "string",
      "enum": [
        "easy",
        "medium",
        "hard"
      ]
    },
    "question_text": {
      "type": "string",
      "description": "The question stem"
    },
    "option_a": {
      "type": "string"
    },
    "option_b": {
      "type": "string"
    },
    "option_c": {
      "type": "string"
    },
    "option_d": {
      "type": "string"
    },
    "correct_answer": {
      "type": "string",
      "enum": [
        "A",
        "B",
        "C",
        "D"
      ]
    },
    "explanation": {
      "type": "string",
      "description": "Why the correct answer is right"
    },
    "wrong_explanations": {
      "type": "string",
      "description": "Why other options are wrong"
    },
    "reference": {
      "type": "string",
      "description": "Reference to ILM section or concept"
    },
    "formula": {
      "type": "string",
      "description": "Formula used if applicable"
    }
  },
  "required": [
    "year",
    "section",
    "section_name",
    "difficulty",
    "question_text",
    "option_a",
    "option_b",
    "option_c",
    "option_d",
    "correct_answer",
    "explanation"
  ],
  "rls": {
    "create": {
      "user_condition": {
        "role": "admin"
      }
    },
    "read": {},
    "update": {
      "user_condition": {
        "role": "admin"
      }
    },
    "delete": {
      "user_condition": {
        "role": "admin"
      }
    }
  }
}