{
  "name": "UserProgress",
  "type": "object",
  "properties": {
    "total_questions_answered": {
      "type": "number",
      "default": 0
    },
    "total_correct": {
      "type": "number",
      "default": 0
    },
    "quizzes_completed": {
      "type": "number",
      "default": 0
    },
    "full_exams_completed": {
      "type": "number",
      "default": 0
    },
    "section_stats": {
      "type": "object",
      "description": "Stats per section {section_number: {attempted, correct}}"
    },
    "weak_questions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Question IDs answered incorrectly"
    },
    "bookmarked_questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "best_score": {
      "type": "number"
    },
    "study_streak_days": {
      "type": "number",
      "default": 0
    },
    "last_study_date": {
      "type": "string",
      "format": "date"
    }
  },
  "required": [],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}