{
  "name": "QuizAttempt",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": [
        "full_exam",
        "section_focus",
        "quick_quiz",
        "weak_areas",
        "calculations"
      ]
    },
    "section_filter": {
      "type": "number",
      "description": "Section number if section focus mode"
    },
    "total_questions": {
      "type": "number"
    },
    "correct_answers": {
      "type": "number"
    },
    "score_percentage": {
      "type": "number"
    },
    "time_taken_seconds": {
      "type": "number"
    },
    "section_scores": {
      "type": "object",
      "description": "Score breakdown by section"
    },
    "question_results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "question_id": {
            "type": "string"
          },
          "user_answer": {
            "type": "string"
          },
          "correct": {
            "type": "boolean"
          },
          "section": {
            "type": "number"
          }
        }
      }
    },
    "completed": {
      "type": "boolean"
    }
  },
  "required": [
    "mode",
    "total_questions"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "created_by": "{{user.email}}"
    },
    "update": {
      "created_by": "{{user.email}}"
    },
    "delete": {
      "created_by": "{{user.email}}"
    }
  }
}